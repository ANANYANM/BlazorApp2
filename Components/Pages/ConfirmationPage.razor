@page "/confirmation-page"
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<h3>Sign Up Successful</h3>
<p>Thank you for signing up! Your request has been submitted and is awaiting approval by the administrator. You will receive a notification once your sign-up is processed.</p>

<button @onclick="NavigateToSignUpPage">Go to Admin login</button>

@code {
    // Method to navigate back to the customer sign-up page
    private void NavigateToSignUpPage()
    {
        NavigationManager.NavigateTo("/admin-login", forceLoad: true);
    }
}

